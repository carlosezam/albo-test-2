<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.beerdeatils.BeerDetailsFragment"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:background="?attr/colorSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/collapsedappbar"
            app:expandedTitleTextAppearance="@style/expandedappbar"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/mr_xl"
                android:layout_marginBottom="?attr/actionBarSize"
                android:scaleType="fitCenter"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/mr_md"
                android:layout_marginStart="@dimen/mr_md"
                android:padding="@dimen/mr_xs"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_sports_bar_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorPrimary" />
            <TextView
                android:id="@+id/name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_xs"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/primaryContrast"
                app:layout_constraintTop_toTopOf="@id/name_icon"
                app:layout_constraintStart_toEndOf="@id/name_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_name"
                />
            <TextView
                android:id="@+id/name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:layout_marginBottom="@dimen/mr_xs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/secondaryContrast"
                app:layout_constraintStart_toEndOf="@id/name_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_label"
                tools:text="Curabitur neque nisi, elementum in erat ac, feugiat consectetur mauris."
                />

            <ImageView
                android:id="@+id/tagline_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/mr_md"
                android:layout_marginStart="@dimen/mr_md"
                android:padding="@dimen/mr_xs"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_local_offer_24"
                app:layout_constraintTop_toBottomOf="@id/name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorPrimary" />
            <TextView
                android:id="@+id/tagline_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_xs"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/primaryContrast"
                app:layout_constraintTop_toTopOf="@id/tagline_icon"
                app:layout_constraintStart_toEndOf="@id/tagline_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_tagline"
                />
            <TextView
                android:id="@+id/tagline_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:layout_marginBottom="@dimen/mr_xs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/secondaryContrast"
                app:layout_constraintStart_toEndOf="@id/tagline_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagline_label"
                tools:text="Curabitur neque nisi, elementum in erat ac, feugiat consectetur mauris."
                />

            <ImageView
                android:id="@+id/description_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/mr_md"
                android:layout_marginStart="@dimen/mr_md"
                android:padding="@dimen/mr_xs"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_info_24"
                app:layout_constraintTop_toBottomOf="@id/tagline_text"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorPrimary"
                />
            <TextView
                android:id="@+id/description_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_xs"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/primaryContrast"
                app:layout_constraintTop_toTopOf="@id/description_icon"
                app:layout_constraintStart_toEndOf="@id/description_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_description"
                />
            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:layout_marginBottom="@dimen/mr_xs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/secondaryContrast"
                app:layout_constraintStart_toEndOf="@id/description_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_label"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus pulvinar non odio laoreet posuere. Morbi eu justo ac velit bibendum efficitur id placerat nulla."
                />

            <ImageView
                android:id="@+id/first_brewed_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/mr_md"
                android:layout_marginStart="@dimen/mr_md"
                android:padding="@dimen/mr_xs"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_today_24"
                app:layout_constraintTop_toBottomOf="@id/description_text"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorPrimary"
                />
            <TextView
                android:id="@+id/first_brewed_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_xs"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/primaryContrast"
                app:layout_constraintTop_toTopOf="@id/first_brewed_icon"
                app:layout_constraintStart_toEndOf="@id/first_brewed_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_first_brewed_date"
                />
            <TextView
                android:id="@+id/first_brewed_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:layout_marginBottom="@dimen/mr_xs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/secondaryContrast"
                app:layout_constraintStart_toEndOf="@id/first_brewed_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_brewed_label"
                tools:text="Curabitur neque nisi, elementum in erat ac, feugiat consectetur mauris."
                />

            <ImageView
                android:id="@+id/food_pairing_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/mr_md"
                android:layout_marginStart="@dimen/mr_md"
                android:padding="@dimen/mr_xs"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_restaurant_menu_24"
                app:layout_constraintTop_toBottomOf="@id/first_brewed_text"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="?attr/colorPrimary"
                />
            <TextView
                android:id="@+id/food_pairing_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mr_xs"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/primaryContrast"
                app:layout_constraintTop_toTopOf="@id/food_pairing_icon"
                app:layout_constraintStart_toEndOf="@id/food_pairing_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/label_first_brewed_date"
                />
            <TextView
                android:id="@+id/food_pairing_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mr_md"
                android:layout_marginEnd="@dimen/mr_lg"
                android:layout_marginBottom="@dimen/mr_xs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/secondaryContrast"
                app:layout_constraintStart_toEndOf="@id/food_pairing_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/food_pairing_label"
                tools:text="Curabitur neque nisi, elementum in erat ac, feugiat consectetur mauris."
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>